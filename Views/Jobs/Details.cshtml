@model MaxSoftWebSite.Models.Job

@{
    ViewBag.Title = "التفاصيل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="col-md-offset-1">@ViewBag.Title</h2>

    <div class="col-md-offset-1 col-md-10 alert alert-info">
        <h4>الوظيفة</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JobTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.JobTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JobContent)
            </dt>

            <dd>
                @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JobImage)
            </dt>

            <dd>
                <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)" class="thumbnail" style="width:64px;height:64px;" />
            </dd>

        </dl>
    <p>
        @Html.ActionLink("تعديل", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
        @Html.ActionLink("العودة الى القائمة", "Index")
    </p>
</div>
