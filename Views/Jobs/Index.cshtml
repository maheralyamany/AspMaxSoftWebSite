@model IEnumerable<MaxSoftWebSite.Models.Job>

@{
    ViewBag.Title = "قائمة الوظائف المنشورة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   <h2> @ViewBag.Title </h2>

<p>
    @Html.ActionLink("نشر وظيفة جديدة", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-bordered">
    <thead class="table-hover0">
        <tr class="heading1">
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>
        </thead>
    @foreach (var item in Model)
    {
        <tbody class="table-hover1">
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.JobContent).ToString()))
                </td>
                <td>
                    <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImage)" class="thumbnail" style="width:48px;height:48px;" />
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
            </tbody>
            }
</table>