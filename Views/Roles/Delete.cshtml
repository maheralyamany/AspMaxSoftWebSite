@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "الحذف";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="col-md-offset-1">الحذف</h2>
<div class="col-md-offset-1 col-md-10 alert alert-danger">
    <h3>هل انت متأكد من حذف هذا المستخدم ؟</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            نوع المستخدم
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="تأكيد الحذف" class="btn btn-danger" />
            @Html.ActionLink("العودة الى القائمة", "Index")
        </div>
    }

</div>
