@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "قائمة انواع حسابات المستخدمين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> @ViewBag.Title </h2>

<p>
    @Html.ActionLink("إنشاء مستخدم جديد", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-bordered">
    <thead class="table-hover0">
        <tr class="heading1">
            <th>
               نوع المستخدم
            </th>
            <th style="width:190px;"></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody class="table-hover1">
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        </tbody>
    }

</table>
