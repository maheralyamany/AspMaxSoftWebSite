@model IEnumerable<MaxSoftWebSite.Models.ApplyForJob>

@{
    ViewBag.Title = "GetJobsByUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>جميع الوظائف التي تقدمت لها</h2>

<table class="table table-bordered table-hover">
    <thead class="table-hover0">
        <tr class="heading1">
            <th>
                @Html.DisplayNameFor(model => model.job.JobTitle)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplyDate)
            </th>
            <th></th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody class="table-hover1">
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.job.JobTitle)
                    </td>
                    <td>
                        @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => item.Message).ToString()))

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplyDate)
                    </td>
                    <td>
                        @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("تفاصيل", "DetailsOfJob", new { id = item.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
                </tbody>
                }

</table>
