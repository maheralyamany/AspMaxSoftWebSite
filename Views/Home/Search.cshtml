@model IEnumerable<MaxSoftWebSite.Models.Job>

@{
    ViewBag.Title = "البحث";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading">
        <h1>ناتج البحث</h1>
    </div>
        <div class="row panel-body">
            @foreach (var subItem in Model)
            {
                <div class="col-md-3 thumbnail" style="margin-left:10px;margin-bottom:20px;height:380px;">
                    <img class="img-rounded" style="height:60%;" src="~/Uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.JobContent).ToString()))</h5>
                    @Html.ActionLink("التفاصيل", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-info" })

                </div>
            }
        </div>
    </div>

