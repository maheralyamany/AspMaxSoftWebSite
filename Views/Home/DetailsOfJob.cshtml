@model MaxSoftWebSite.Models.ApplyForJob

@{
    ViewBag.Title = "تفاصيل الوظيفة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="col-md-offset-1">@ViewBag.Title</h2>

    <div class="col-md-offset-1 col-md-10 alert alert-info">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.job.JobTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.job.JobTitle)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Message)
            </dt>

            <dd>
               
                @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.Message).ToString()))
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ApplyDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ApplyDate)
            </dd>

        </dl>
    <p>
        @Html.ActionLink("تعديل", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
        @Html.ActionLink("العودة الى القائمة", "Index")
    </p>
    </div>
